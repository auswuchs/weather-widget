{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
  ],
  "noImplicitAny": false,
  "allowJs": true,
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "lib": [
      "ESNext",
      "dom"
    ],
    "moduleResolution": "node"
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}